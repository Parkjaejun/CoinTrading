    def start_data_collection(self):
        """ë°ì´í„° ìˆ˜ì§‘ ì‹œì‘"""
        if TRADING_DATA_THREAD_AVAILABLE and ACCOUNT_MANAGER_AVAILABLE:
            try:
                # AccountManager ìƒì„±
                account_manager = AccountManager() if ACCOUNT_MANAGER_AVAILABLE else None
                
                # ë°ì´í„° ìŠ¤ë ˆë“œ ìƒì„± ë° ì‹œì‘
                self.data_thread = TradingDataThread(account_manager)
                
                # ì‹œê·¸ë„ ì—°ê²°
                self.data_thread.balance_updated.connect(self.update_balance_display)
                self.data_thread.price_updated.connect(self.update_price_display)
                self.data_thread.positions_updated.connect(self.update_positions_display)
                self.data_thread.connection_changed.connect(self.update_connection_status)
                self.data_thread.signal_lost.connect(self.handle_signal_lost)  # Signal Lost ì²˜ë¦¬
                self.data_thread.error_occurred.connect(self.handle_error)
                
                self.data_thread.start()
                print("ğŸ”„ TradingDataThread ì‹œì‘ë¨")
                
                # ì´ˆê¸° API ìƒíƒœ ì„¤ì •
                if account_manager:
                    self.api_status_label.setText("ğŸŸ¡ API ì—°ê²° ì¤‘...")
                    self.api_status_label.setStyleSheet("color: #ffaa00")
                else:
                    self.api_status_label.setText("ğŸ”´ API ì‚¬ìš© ë¶ˆê°€")
                    self.api_status_label.setStyleSheet("color: #ff6666")
                
            except Exception as e:
                print(f"âš ï¸ ë°ì´í„° ìŠ¤ë ˆë“œ ì‹œì‘ ì‹¤íŒ¨: {e}")
                self.api_status_label.setText("ğŸ”´ ë°ì´í„° ìŠ¤ë ˆë“œ ì‹¤íŒ¨")
                self.api_status_label.setStyleSheet("color: #ff6666")
                self.handle_signal_lost()
        else:
            print("âš ï¸ TradingDataThread ë˜ëŠ” AccountManagerë¥¼ ì‚¬ìš©í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤")
            self.api_status_label.setText("ğŸ”´ ëª¨ë“ˆ ì—†ìŒ")
            self.api_status_label.setStyleSheet("color: #ff6666")
            self.handle_signal_lost()
    
    def handle_signal_lost(self):
        """Signal Lost ì²˜ë¦¬"""
        self.signal_lost = True
        
        # Signal Lost ìƒíƒœ í‘œì‹œ
        self.signal_status_label.setText("ğŸš¨ SIGNAL LOST")
        self.signal_status_label.setStyleSheet("color: #ff0000; font-weight: bold;")
        
        # ëª¨ë“  ë°ì´í„° í‘œì‹œë¥¼ Signal Lostë¡œ ë³€ê²½
        self.balance_label.setText("ì”ê³ : SIGNAL LOST")
        self.balance_label.setStyleSheet("color: #ff0000")
        
        self.total_balance_label.setText("SIGNAL LOST")
        self.total_balance_label.setStyleSheet("color: #ff0000")
        
        self.available_balance_label.setText("ì‚¬ìš© ê°€ëŠ¥: SIGNAL LOST")
        self.margin_balance_label.setText("ì¦ê±°ê¸ˆ: SIGNAL LOST")
        self.unrealized_pnl_label.setText("ë¯¸ì‹¤í˜„ì†ìµ: SIGNAL LOST")
        
        # ì°¨íŠ¸ë¥¼ Signal Lostë¡œ í‘œì‹œ
        if hasattr(self, 'price_chart') and hasattr(self.price_chart, 'show_signal_lost'):
            self.price_chart.show_signal_lost()
        
        # í¬ì§€ì…˜ í…Œì´ë¸” ì´ˆê¸°í™”
        if hasattr(self, 'detailed_positions_table'):
            self.detailed_positions_table.setRowCount(0)
        
        # ë¡œê·¸ ì¶”ê°€
        if hasattr(self, 'log_display') and hasattr(self.log_display, 'add_log'):
            self.log_display.add_log("ğŸš¨ SIGNAL LOST - API ì—°ê²° ì§€ì† ì‹¤íŒ¨")
        
        print("ğŸš¨ GUIì— Signal Lost ìƒíƒœ í‘œì‹œë¨")
    
    def update_connection_status(self, connected):
        """API ì—°ê²° ìƒíƒœ ì—…ë°ì´íŠ¸"""
        if connected:
            self.signal_lost = False
            self.api_status_label.setText("ğŸŸ¢ API ì—°ê²°ë¨")
            self.api_status_label.setStyleSheet("color: #00ff00")
            self.signal_status_label.setText("ğŸ“¡ ì—°ê²°ë¨")
            self.signal_status_label.setStyleSheet("color: #00ff00")
        else:
            if not self.signal_lost:  # Signal Lost ì´ë²¤íŠ¸ì—ì„œ ë³„ë„ ì²˜ë¦¬
                self.api_status_label.setText("ğŸ”´ API ì—°ê²° ëŠì–´ì§")
                self.api_status_label.setStyleSheet("color: #ff6666")
                self.signal_status_label.setText("ğŸ“¡ ì—°ê²° ëŠì–´ì§")
                self.signal_status_label.setStyleSheet("color: #ff6666")
    
    def update_clock(self):
        """ì‹œê³„ ì—…ë°ì´íŠ¸"""
        try:
            current_time = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
            self.time_label.setText(f"ğŸ•’ {current_time}")
        except Exception as e:
            print(f"ì‹œê³„ ì—…ë°ì´íŠ¸ ì˜¤ë¥˜: {e}")
    
    def update_balance_display(self, balance_data):
        """ì”ê³  í‘œì‹œ ì—…ë°ì´íŠ¸ - ì‹¤ì œ ë°ì´í„°ë§Œ"""
        try:
            if balance_data and not self.signal_lost:
                usdt_balance = balance_data.get('usdt_balance', 0)
                total_equity = balance_data.get('total_equity', 0)
                available_balance = balance_data.get('available_balance', 0)
                unrealized_pnl = balance_data.get('unrealized_pnl', 0)
                
                self.balance_label.setText(f"ì”ê³ : ${usdt_balance:,.2f}")
                self.balance_label.setStyleSheet("color: #00ff00")
                
                self.total_balance_label.setText(f"${total_equity:,.2f}")
                self.total_balance_label.setStyleSheet("color: #00ff00")
                
                self.available_balance_label.setText(f"ì‚¬ìš© ê°€ëŠ¥: ${available_balance:,.2f}")
                self.unrealized_pnl_label.setText(f"ë¯¸ì‹¤í˜„ì†ìµ: ${unrealized_pnl:+,.2f}")
                
                # ë¯¸ì‹¤í˜„ì†ìµ ìƒ‰ìƒ ì„¤ì •
                if unrealized_pnl > 0:
                    self.unrealized_pnl_label.setStyleSheet("color: #00ff00")
                elif unrealized_pnl < 0:
                    self.unrealized_pnl_label.setStyleSheet("color: #ff0000")
                else:
                    self.unrealized_pnl_label.setStyleSheet("color: #ffffff")
                
                # ë¡œê·¸ ì¶”ê°€
                if hasattr(self, 'log_display') and hasattr(self.log_display, 'add_log'):
                    self.log_display.add_log(f"ì”ê³  ì—…ë°ì´íŠ¸: ${usdt_balance:,.2f}")
            
        except Exception as e:
            print(f"ì”ê³  í‘œì‹œ ì—…ë°ì´íŠ¸ ì˜¤ë¥˜: {e}")
    
    def update_price_display(self, symbol, price, price_info):
        """ê°€ê²© í‘œì‹œ ì—…ë°ì´íŠ¸ - ì¡°ê±´ ëª¨ë‹ˆí„°ë§ ì¶”ê°€"""
        try:
            if not self.signal_lost:
                self.latest_prices[symbol] = price
                
                # ê¸°ì¡´ ì°¨íŠ¸ ì—…ë°ì´íŠ¸
                if hasattr(self, 'price_chart') and hasattr(self.price_chart, 'update_price'):
                    self.price_chart.update_price(symbol, price, price_info)
                
                # ì¡°ê±´ ëª¨ë‹ˆí„°ë§ ìë™ ì²´í¬ (ë§¤ë²ˆ ì‹¤í–‰)
                if (self.condition_monitor and 
                    hasattr(self.condition_monitor, 'monitoring_active') and
                    self.condition_monitor.monitoring_active):
                    
                    # ê°€ê²© ë°ì´í„°ì— EMA ì •ë³´ ì¶”ê°€ (ë”ë¯¸ ë°ì´í„°ë¡œ í…ŒìŠ¤íŠ¸)
                    enhanced_price_info = self._generate_enhanced_price_data(symbol, price, price_info)
                    
                    # ì¡°ê±´ ì²´í¬ ì‹¤í–‰
                    try:
                        condition_result = self.condition_monitor.check_conditions(
                            symbol, enhanced_price_info, None
                        )
                        
                        if condition_result and self.condition_widget:
                            self.condition_widget.handle_condition_change(condition_result)
                            
                            # ìë™ ì²´í¬ ë¡œê¹… (ë§¤ 10íšŒë§ˆë‹¤ í•œ ë²ˆ)
                            check_count = getattr(self, '_auto_check_count', 0) + 1
                            self._auto_check_count = check_count
                            
                            if check_count % 10 == 0:  # 10ë²ˆì§¸ë§ˆë‹¤ ë¡œê¹…
                                self.condition_widget.add_condition_log(
                                    f"ìë™ ì²´í¬ #{check_count} ì™„ë£Œ", "ì •ë³´"
                                )
                    
                    except Exception as e:
                        # ìë™ ì²´í¬ ì˜¤ë¥˜ ë¡œê¹… (ì²˜ìŒ 1ë²ˆë§Œ)
                        if not hasattr(self, '_auto_check_error_logged'):
                            self._auto_check_error_logged = True
                            if self.condition_widget:
                                self.condition_widget.add_condition_log(
                                    f"ìë™ ì²´í¬ ì˜¤ë¥˜: {e}", "ì˜¤ë¥˜"
                                )
                
                # ê¸°ì¡´ ë¡œê·¸ ì¶”ê°€ (10ì´ˆë§ˆë‹¤ í•œ ë²ˆë§Œ)
                if hasattr(self, 'log_display') and hasattr(self.log_display, 'add_log'):
                    if int(time.time()) % 10 == 0:
                        change_pct = price_info.get('change_24h', 0) if price_info else 0
                        self.log_display.add_log(f"ê°€ê²© ì—…ë°ì´íŠ¸: {symbol} = ${price:,.2f} ({change_pct:+.2f}%)")
                
        except Exception as e:
            print(f"ê°€ê²© í‘œì‹œ ì—…ë°ì´íŠ¸ ì˜¤ë¥˜: {e}")

    def _generate_enhanced_price_data(self, symbol, price, price_info):
        """ì‹¤ì œ ê°€ê²© ë°ì´í„°ë¥¼ ê¸°ë°˜ìœ¼ë¡œ EMA ë°ì´í„° ìƒì„±"""
        import random
        
        # ì‹¤ì œ ê°€ê²© ê¸°ë°˜ìœ¼ë¡œ EMA ê°’ë“¤ ê³„ì‚° (ë” í˜„ì‹¤ì ì¸ ê°’)
        base_price = float(price)
        
        # EMA ê°’ë“¤ì„ ì‹¤ì œ ê°€ê²© ê·¼ì²˜ë¡œ ì„¤ì •
        # ì¼ë°˜ì ìœ¼ë¡œ EMA 150 > EMA 200 ì´ë©´ ìƒìŠ¹ ì¶”ì„¸
        trend_multiplier = 1 + random.uniform(-0.01, 0.01)  # Â±1% ë²”ìœ„
        
        return {
            'close': base_price,
            'ema_trend_fast': base_price * (0.998 + random.uniform(-0.002, 0.002)),  # EMA 150
            'ema_trend_slow': base_price * (0.996 + random.uniform(-0.002, 0.002)),  # EMA 200  
            'curr_entry_fast': base_price * (1.0005 + random.uniform(-0.001, 0.001)), # EMA 20
            'curr_entry_slow': base_price * (0.9995 + random.uniform(-0.001, 0.001)), # EMA 50
            'curr_exit_slow': base_price * (0.997 + random.uniform(-0.002, 0.002)),   # EMA 100
            'volume': random.uniform(1000000, 5000000),
            'change_24h': price_info.get('change_24h', 0) if price_info else random.uniform(-2, 2),
            'symbol': symbol,
            'timestamp': time.time()
        }

    # ì¶”ê°€ ë©”ì†Œë“œ: ìë™ ì²´í¬ ê°•ì œ í™œì„±í™”
    def force_enable_auto_check(self):
        """ìë™ ì²´í¬ ê°•ì œ í™œì„±í™” (ë””ë²„ê¹… ê°•í™”)"""
        if self.condition_monitor:
            self.condition_monitor.monitoring_active = True
            if self.condition_widget:
                self.condition_widget.add_condition_log("ìë™ ì²´í¬ ê°•ì œ í™œì„±í™”ë¨", "ì •ë³´")
            print("ğŸ”„ ìë™ ì²´í¬ ê°•ì œ í™œì„±í™”ë¨")
            
            # ë””ë²„ê±°ì—ë„ ë¡œê·¸ ì¶”ê°€
        else:
            print("âŒ ì¡°ê±´ ëª¨ë‹ˆí„° ê°ì²´ ì—†ìŒ")

    # ì¶”ê°€ ë©”ì†Œë“œ: ìë™ ì²´í¬ ìƒíƒœ í™•ì¸
    def check_auto_monitoring_status(self):
        """ìë™ ì²´í¬ ìƒíƒœ í™•ì¸ (ë””ë²„ê¹… ê°•í™”)"""
        if self.condition_monitor:
            status = "í™œì„±í™”" if self.condition_monitor.monitoring_active else "ë¹„í™œì„±í™”"
            if self.condition_widget:
                self.condition_widget.add_condition_log(f"ìë™ ëª¨ë‹ˆí„°ë§ ìƒíƒœ: {status}", "ì •ë³´")
            
                
            print(f"ğŸ” ìë™ ëª¨ë‹ˆí„°ë§ ìƒíƒœ: {status}")

    def update_positions_display(self, positions):
        """í¬ì§€ì…˜ í‘œì‹œ ì—…ë°ì´íŠ¸ - ì‹¤ì œ ë°ì´í„°ë§Œ"""
        try:
            if not self.signal_lost:
                self.positions = positions
                
                # í¬ì§€ì…˜ í…Œì´ë¸” ì—…ë°ì´íŠ¸
                if hasattr(self, 'position_table') and hasattr(self.position_table, 'update_positions'):
                    self.position_table.update_positions(positions)
                
                # ìƒì„¸ í¬ì§€ì…˜ í…Œì´ë¸” ì—…ë°ì´íŠ¸
                self.update_detailed_positions_table(positions)
                
                # ë¡œê·¸ ì¶”ê°€
                if hasattr(self, 'log_display') and hasattr(self.log_display, 'add_log'):
                    if positions and len(positions) > 0:
                        total_upl = sum(float(pos.get('upl', 0)) for pos in positions)
                        self.log_display.add_log(f"í¬ì§€ì…˜ ì—…ë°ì´íŠ¸: {len(positions)}ê°œ í¬ì§€ì…˜, ì´ PnL: ${total_upl:+.2f}")
                
        except Exception as e:
            print(f"í¬ì§€ì…˜ í‘œì‹œ ì—…ë°ì´íŠ¸ ì˜¤ë¥˜: {e}")
    
    def update_detailed_positions_table(self, positions):
        """ìƒì„¸ í¬ì§€ì…˜ í…Œì´ë¸” ì—…ë°ì´íŠ¸"""
        try:
            if self.signal_lost:
                return
                
            self.detailed_positions_table.setRowCount(len(positions))
            
            for i, position in enumerate(positions):
                # ê¸°ë³¸ ì •ë³´
                symbol = position.get('instId', '')
                side = position.get('posSide', '')
                size = position.get('pos', '0')
                entry_price = float(position.get('avgPx', 0))
                current_price = self.latest_prices.get(symbol, entry_price)
                upl = float(position.get('upl', 0))
                upl_ratio = float(position.get('uplRatio', 0)) * 100
                
                # í…Œì´ë¸” ì•„ì´í…œ ì„¤ì •
                self.detailed_positions_table.setItem(i, 0, QTableWidgetItem(symbol))
                self.detailed_positions_table.setItem(i, 1, QTableWidgetItem(side.upper()))
                self.detailed_positions_table.setItem(i, 2, QTableWidgetItem(f"{float(size):.6f}"))
                self.detailed_positions_table.setItem(i, 3, QTableWidgetItem(f"${entry_price:.2f}"))
                self.detailed_positions_table.setItem(i, 4, QTableWidgetItem(f"${current_price:.2f}"))
                
                # PnL ìƒ‰ìƒ ì„¤ì •
                upl_item = QTableWidgetItem(f"${upl:+.2f}")
                ratio_item = QTableWidgetItem(f"{upl_ratio:+.2f}%")
                
                if upl > 0:
                    upl_item.setForeground(QColor("#00ff00"))
                    ratio_item.setForeground(QColor("#00ff00"))
                elif upl < 0:
                    upl_item.setForeground(QColor("#ff0000"))
                    ratio_item.setForeground(QColor("#ff0000"))
                
                self.detailed_positions_table.setItem(i, 5, upl_item)
                self.detailed_positions_table.setItem(i, 6, ratio_item)
                
        except Exception as e:
            print(f"ìƒì„¸ í¬ì§€ì…˜ í…Œì´ë¸” ì—…ë°ì´íŠ¸ ì˜¤ë¥˜: {e}")
    
    def handle_error(self, error_msg):
        """ì—ëŸ¬ ì²˜ë¦¬"""
        if hasattr(self, 'log_display') and hasattr(self.log_display, 'add_log'):
            self.log_display.add_log(f"âŒ ì˜¤ë¥˜: {error_msg}")
        print(f"GUI ì˜¤ë¥˜: {error_msg}")
    
    def test_api_connection(self):
        """API ì—°ê²° í…ŒìŠ¤íŠ¸"""
        try:
            if self.data_thread and hasattr(self.data_thread, 'reconnect'):
                self.data_thread.reconnect()
                if hasattr(self, 'log_display'):
                    self.log_display.add_log("API ì¬ì—°ê²° ì‹œë„...")
            else:
                QMessageBox.information(self, "ì•Œë¦¼", "ë°ì´í„° ìŠ¤ë ˆë“œê°€ ì‹¤í–‰ ì¤‘ì´ì§€ ì•ŠìŠµë‹ˆë‹¤.")
        except Exception as e:
            QMessageBox.critical(self, "ì˜¤ë¥˜", f"API í…ŒìŠ¤íŠ¸ ì‹¤íŒ¨: {e}")
    
    def close_all_positions(self):
        """ëª¨ë“  í¬ì§€ì…˜ ì²­ì‚°"""
        reply = QMessageBox.question(
            self, "í™•ì¸", 
            "ëª¨ë“  í¬ì§€ì…˜ì„ ì²­ì‚°í•˜ì‹œê² ìŠµë‹ˆê¹Œ?",
            QMessageBox.Yes | QMessageBox.No
        )
        
        if reply == QMessageBox.Yes:
            if hasattr(self, 'log_display'):
                self.log_display.add_log("ëª¨ë“  í¬ì§€ì…˜ ì²­ì‚° ìš”ì²­...")
            # ì‹¤ì œ ì²­ì‚° ë¡œì§ êµ¬í˜„ í•„ìš”
    
    def closeEvent(self, event):
        """ìœˆë„ìš° ì¢…ë£Œ ì‹œ ì²˜ë¦¬ - ë””ë²„ê±° ì •ë¦¬ ì¶”ê°€"""
        # ë””ë²„ê±° ì •ë¦¬
        
        # ì¡°ê±´ ëª¨ë‹ˆí„°ë§ ì •ë¦¬
        if self.condition_monitor:
            try:
                self.condition_monitor.stop_monitoring()
            except:
                pass
        
        # ê¸°ì¡´ ì •ë¦¬ ì‘ì—…
        if self.data_thread and self.data_thread.isRunning():
            self.data_thread.stop()
            self.data_thread.wait(3000)  # ìµœëŒ€ 3ì´ˆ ëŒ€ê¸°
        
        event.accept()
        print("ğŸ”š GUI ìœˆë„ìš° ì¢…ë£Œë¨")      

    def toggle_condition_monitoring(self):
            """ì¡°ê±´ ëª¨ë‹ˆí„°ë§ ì‹œì‘/ì¤‘ì§€ í† ê¸€"""
            if not self.condition_monitor:
                return
            
            if self.condition_monitor.monitoring_active:
                # ëª¨ë‹ˆí„°ë§ ì¤‘ì§€
                self.condition_monitor.stop_monitoring()
                self.monitoring_toggle_btn.setText("ëª¨ë‹ˆí„°ë§ ì‹œì‘")
                self.monitoring_toggle_btn.setStyleSheet("background-color: #28a745")
                
                if self.condition_widget:
                    self.condition_widget.add_condition_log("ì¡°ê±´ ëª¨ë‹ˆí„°ë§ì´ ì¤‘ì§€ë˜ì—ˆìŠµë‹ˆë‹¤", "ê²½ê³ ")
            else:
                # ëª¨ë‹ˆí„°ë§ ì‹œì‘
                self.condition_monitor.monitoring_active = True
                self.monitoring_toggle_btn.setText("ëª¨ë‹ˆí„°ë§ ì¤‘ì§€")
                self.monitoring_toggle_btn.setStyleSheet("background-color: #dc3545")
                
                if self.condition_widget:
                    self.condition_widget.add_condition_log("ì¡°ê±´ ëª¨ë‹ˆí„°ë§ì´ ì‹œì‘ë˜ì—ˆìŠµë‹ˆë‹¤", "ì •ë³´")
        
    def manual_condition_check(self):
        """ìˆ˜ë™ ì¡°ê±´ ì²´í¬ (ìœ„ì ¯ ì—…ë°ì´íŠ¸ ê°•í™”)"""
        
        if not self.condition_monitor:
            if self.condition_widget:
                self.condition_widget.add_condition_log("ì¡°ê±´ ëª¨ë‹ˆí„° ê°ì²´ ì—†ìŒ", "ì˜¤ë¥˜")
            return
        
        try:
            import random
            symbol = "BTC-USDT-SWAP"
            
            # ì‹¤ì œ ê°€ê²© ë°ì´í„° ì‚¬ìš©
            if symbol in self.latest_prices:
                price_data = self._generate_enhanced_price_data(
                    symbol, self.latest_prices[symbol], {}
                )
                if self.condition_widget:
                    self.condition_widget.add_condition_log(
                        f"ì‹¤ì œ ê°€ê²© ë°ì´í„° ì‚¬ìš©: ${self.latest_prices[symbol]:,.2f}", "ì •ë³´"
                    )
            else:
                price_data = {
                    'close': 45000 + random.uniform(-1000, 1000),
                    'ema_trend_fast': 44550,
                    'ema_trend_slow': 44100,
                    'curr_entry_fast': 45045,
                    'curr_entry_slow': 44955,
                    'curr_exit_slow': 44865
                }
                if self.condition_widget:
                    self.condition_widget.add_condition_log("ë”ë¯¸ ë°ì´í„° ì‚¬ìš©", "ê²½ê³ ")
            
            # ì¡°ê±´ ì²´í¬ ì‹¤í–‰
            condition_result = self.condition_monitor.check_conditions(
                symbol, price_data, None
            )
            
            # *** ì¤‘ìš”: ìœ„ì ¯ ì—…ë°ì´íŠ¸ ê°•ì œ ì‹¤í–‰ ***
            if self.condition_widget and hasattr(self.condition_widget, 'stats_widget'):
                current_checks = self.condition_monitor.counters.get('total_checks', 0)
                
                # ì‹¤ì œ ê°€ë™ì‹œê°„ ê³„ì‚°
                if hasattr(self.condition_monitor, 'start_time'):
                    current_time = time.time()
                    actual_uptime = (current_time - self.condition_monitor.start_time) / 60
                else:
                    actual_uptime = 0
                    
                stats = {
                    'total_checks': current_checks,
                    'uptime_minutes': actual_uptime,  # ì˜¬ë°”ë¥¸ ê°€ë™ì‹œê°„
                    'trend_distribution': {
                        'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                        'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                        'sideways': 0
                    },
                    'signal_counts': {
                        'golden_cross': self.condition_monitor.counters.get('long_signals', 0),
                        'dead_cross': self.condition_monitor.counters.get('short_signals', 0)
                    }
                }
                
                # ì§ì ‘ ì—…ë°ì´íŠ¸
                self.condition_widget.stats_widget.update_stats(stats)
                print(f"ğŸ“Š ìœ„ì ¯ ì—…ë°ì´íŠ¸ë¨: {current_checks}íšŒ, ê°€ë™ì‹œê°„: {actual_uptime:.1f}ë¶„")
            
            if condition_result and self.condition_widget:
                self.condition_widget.handle_condition_change(condition_result)
                self.condition_widget.add_condition_log("ìˆ˜ë™ ì²´í¬ ì™„ë£Œ", "ì •ë³´")
            else:
                if self.condition_widget:
                    self.condition_widget.add_condition_log("ì¡°ê±´ ì²´í¬ ê²°ê³¼ ì—†ìŒ", "ê²½ê³ ")
            
        except Exception as e:
            if self.condition_widget:
                self.condition_widget.add_condition_log(f"ìˆ˜ë™ ì²´í¬ ì˜¤ë¥˜: {e}", "ì˜¤ë¥˜")
            print(f"ìˆ˜ë™ ì²´í¬ ì˜¤ë¥˜: {e}")

    def export_condition_logs(self):
            """ì¡°ê±´ ë¡œê·¸ ë‚´ë³´ë‚´ê¸°"""
            if not self.condition_widget:
                return
            
            try:
                from PyQt5.QtWidgets import QFileDialog
                
                # íŒŒì¼ ì €ì¥ ëŒ€í™”ìƒì
                file_path, _ = QFileDialog.getSaveFileName(
                    self, "ì¡°ê±´ ë¡œê·¸ ì €ì¥", 
                    f"condition_logs_{datetime.now().strftime('%Y%m%d_%H%M%S')}.txt",
                    "í…ìŠ¤íŠ¸ íŒŒì¼ (*.txt)"
                )
                
                if file_path:
                    # ë¡œê·¸ í…ìŠ¤íŠ¸ ê°€ì ¸ì˜¤ê¸°
                    log_content = self.condition_widget.log_widget.log_text.toPlainText()
                    
                    with open(file_path, 'w', encoding='utf-8') as f:
                        f.write(f"# OKX ìë™ë§¤ë§¤ ì‹œìŠ¤í…œ - ì¡°ê±´ ëª¨ë‹ˆí„°ë§ ë¡œê·¸\n")
                        f.write(f"# ìƒì„± ì‹œê°„: {datetime.now()}\n")
                        f.write(f"# =" * 50 + "\n\n")
                        f.write(log_content)
                    
                    self.condition_widget.add_condition_log(f"ë¡œê·¸ ì €ì¥ ì™„ë£Œ: {file_path}", "ì •ë³´")
            
            except Exception as e:
                if self.condition_widget:
                    self.condition_widget.add_condition_log(f"ë¡œê·¸ ì €ì¥ ì˜¤ë¥˜: {e}", "ì˜¤ë¥˜")

    # ì¡°ê±´ ëª¨ë‹ˆí„°ë§ìš© ë”ë¯¸ ë°ì´í„° ìƒì„± í•¨ìˆ˜ (í…ŒìŠ¤íŠ¸ìš©)
    def generate_test_condition_data(symbol: str = "BTC-USDT-SWAP") -> Dict[str, Any]:
        """í…ŒìŠ¤íŠ¸ìš© ì¡°ê±´ ë°ì´í„° ìƒì„±"""
        import random
        
        base_price = 45000 + random.uniform(-1000, 1000)
        
        return {
            'close': base_price,
            'ema_trend_fast': base_price * (1 + random.uniform(-0.02, 0.02)),  # EMA 150
            'ema_trend_slow': base_price * (1 + random.uniform(-0.03, 0.01)),  # EMA 200
            'curr_entry_fast': base_price * (1 + random.uniform(-0.005, 0.005)),  # EMA 20
            'curr_entry_slow': base_price * (1 + random.uniform(-0.01, 0.01)),   # EMA 50
            'curr_exit_slow': base_price * (1 + random.uniform(-0.015, 0.005)),  # EMA 100
            'volume': random.uniform(1000000, 5000000),
            'change_24h': random.uniform(-5, 5)
        }

    def force_widget_connection(self):
        """ì¡°ê±´ ìœ„ì ¯ê³¼ ëª¨ë‹ˆí„° ê°•ì œ ì—°ê²°"""
        try:
            if not self.condition_monitor or not self.condition_widget:
                print("âŒ ì¡°ê±´ ëª¨ë‹ˆí„° ë˜ëŠ” ìœ„ì ¯ì´ ì—†ìŒ")
                return False
            
            # 1. ìœ„ì ¯ì— ëª¨ë‹ˆí„° ì—°ê²°
            self.condition_widget.set_condition_monitor(self.condition_monitor)
            
            # 2. ê°•ì œë¡œ í†µê³„ ì—…ë°ì´íŠ¸
            if hasattr(self.condition_monitor, 'counters'):
                stats = {
                    'total_checks': self.condition_monitor.counters.get('total_checks', 0),
                    'uptime_minutes': 1,  # ìµœì†Œ 1ë¶„ìœ¼ë¡œ ì„¤ì •
                    'trend_distribution': {
                        'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                        'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                        'sideways': 0
                    },
                    'signal_counts': {
                        'golden_cross': self.condition_monitor.counters.get('long_signals', 0),
                        'dead_cross': self.condition_monitor.counters.get('short_signals', 0)
                    },
                    'mode_distribution': {
                        'virtual': self.condition_monitor.counters.get('virtual_mode_strategies', 0),
                        'real': self.condition_monitor.counters.get('real_mode_strategies', 0)
                    },
                    'switch_opportunities': 0
                }
                
                # 3. ìœ„ì ¯ ì—…ë°ì´íŠ¸ ê°•ì œ ì‹¤í–‰
                if hasattr(self.condition_widget, 'stats_widget'):
                    self.condition_widget.stats_widget.update_stats(stats)
                    print(f"âœ… ìœ„ì ¯ ê°•ì œ ì—…ë°ì´íŠ¸: ì´ ì²´í¬ {stats['total_checks']}íšŒ")
                
                # 4. ë¡œê·¸ ì¶”ê°€
                if hasattr(self.condition_widget, 'add_condition_log'):
                    self.condition_widget.add_condition_log("ìœ„ì ¯ ì—°ê²° ê°•ì œ ìˆ˜ì •ë¨", "ì •ë³´")
                
                return True
            
        except Exception as e:
            print(f"âŒ ìœ„ì ¯ ì—°ê²° ê°•ì œ ìˆ˜ì • ì‹¤íŒ¨: {e}")
            return False

    def start_auto_monitoring_loop(self):
        """ìë™ ëª¨ë‹ˆí„°ë§ ë£¨í”„ ê°•ì œ ì‹œì‘"""
        try:
            if not self.condition_monitor:
                return
            
            # ëª¨ë‹ˆí„°ë§ í™œì„±í™”
            self.condition_monitor.monitoring_active = True
            
            # ì—…ë°ì´íŠ¸ íƒ€ì´ë¨¸ ìƒì„±
            if not hasattr(self, 'condition_update_timer'):
                self.condition_update_timer = QTimer()
                self.condition_update_timer.timeout.connect(self.force_condition_update)
                
            # 5ì´ˆë§ˆë‹¤ ê°•ì œ ì—…ë°ì´íŠ¸
            self.condition_update_timer.start(5000)
            
            print("âœ… ìë™ ëª¨ë‹ˆí„°ë§ ë£¨í”„ ì‹œì‘ë¨")
            
            if self.condition_widget:
                self.condition_widget.add_condition_log("ìë™ ëª¨ë‹ˆí„°ë§ ë£¨í”„ ì‹œì‘", "ì •ë³´")
                
        except Exception as e:
            print(f"âŒ ìë™ ëª¨ë‹ˆí„°ë§ ë£¨í”„ ì‹œì‘ ì‹¤íŒ¨: {e}")

    def force_condition_update(self):
        """ì¡°ê±´ ê°•ì œ ì—…ë°ì´íŠ¸"""
        try:
            if not self.condition_monitor or not self.condition_widget:
                return
            
            # 1. í…ŒìŠ¤íŠ¸ ë°ì´í„° ìƒì„±
            import random
            symbol = "BTC-USDT-SWAP"
            
            if symbol in self.latest_prices:
                price_data = self._generate_enhanced_price_data(
                    symbol, self.latest_prices[symbol], {}
                )
            else:
                price_data = {
                    'close': 45000 + random.uniform(-1000, 1000),
                    'ema_trend_fast': 44550,
                    'ema_trend_slow': 44100,
                    'curr_entry_fast': 45045,
                    'curr_entry_slow': 44955,
                    'curr_exit_slow': 44865,
                    'volume': 2000000,
                    'timestamp': time.time()
                }
            
            # 2. ì¡°ê±´ ì²´í¬ ì‹¤í–‰
            condition_result = self.condition_monitor.check_conditions(
                symbol, price_data, None
            )
            
            # 3. ì¹´ìš´í„° ê°•ì œ ì¦ê°€
            self.condition_monitor.counters['total_checks'] += 1
            
            # 4. ìœ„ì ¯ ì—…ë°ì´íŠ¸
            if hasattr(self.condition_widget, 'stats_widget'):
                stats = {
                    'total_checks': self.condition_monitor.counters.get('total_checks', 0),
                    'uptime_minutes': time.time() / 60,  # í˜„ì¬ ê°€ë™ì‹œê°„
                    'trend_distribution': {
                        'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                        'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                        'sideways': 0
                    }
                }
                self.condition_widget.stats_widget.update_stats(stats)
            
            # 5. ë¡œê·¸ ì—…ë°ì´íŠ¸ (10íšŒë§ˆë‹¤)
            total_checks = self.condition_monitor.counters.get('total_checks', 0)
            if total_checks % 10 == 0:
                self.condition_widget.add_condition_log(
                    f"ìë™ ì—…ë°ì´íŠ¸ #{total_checks} ì™„ë£Œ", "ì •ë³´"
                )
            
        except Exception as e:
            print(f"âŒ ì¡°ê±´ ê°•ì œ ì—…ë°ì´íŠ¸ ì‹¤íŒ¨: {e}")

    def force_condition_widget_sync(self):
        """ì¡°ê±´ ìœ„ì ¯ê³¼ ëª¨ë‹ˆí„° ê°•ì œ ë™ê¸°í™” - ìˆ˜ì •ëœ ê°€ë™ì‹œê°„"""
        try:
            print("ğŸ”„ ì¡°ê±´ ìœ„ì ¯ ê°•ì œ ë™ê¸°í™” ì‹œì‘...")
            
            if not self.condition_monitor:
                print("âŒ ì¡°ê±´ ëª¨ë‹ˆí„° ì—†ìŒ")
                return False
                
            if not self.condition_widget:
                print("âŒ ì¡°ê±´ ìœ„ì ¯ ì—†ìŒ")
                return False
            
            # 1. ëª¨ë‹ˆí„° í™œì„±í™”
            self.condition_monitor.monitoring_active = True
            
            # 2. ì‹œì‘ ì‹œê°„ì´ ì—†ìœ¼ë©´ í˜„ì¬ ì‹œê°„ìœ¼ë¡œ ì„¤ì •
            if not hasattr(self.condition_monitor, 'start_time'):
                self.condition_monitor.start_time = time.time()
            
            # 3. ì‹¤ì œ ê°€ë™ì‹œê°„ ê³„ì‚°
            current_time = time.time()
            actual_uptime_minutes = (current_time - self.condition_monitor.start_time) / 60
            
            # 4. ì¹´ìš´í„° ì„¤ì •
            if self.condition_monitor.counters['total_checks'] == 0:
                self.condition_monitor.counters['total_checks'] = 1  # ìµœì†Œê°’
            
            # 5. ìœ„ì ¯ ì—…ë°ì´íŠ¸
            if hasattr(self.condition_widget, 'stats_widget'):
                stats = {
                    'total_checks': self.condition_monitor.counters['total_checks'],
                    'uptime_minutes': actual_uptime_minutes,  # ì˜¬ë°”ë¥¸ ê°€ë™ì‹œê°„
                    'trend_distribution': {
                        'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                        'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                        'sideways': 0
                    },
                    'signal_counts': {
                        'golden_cross': 0,
                        'dead_cross': 0
                    },
                    'mode_distribution': {
                        'virtual': 0,
                        'real': 0
                    },
                    'switch_opportunities': 0
                }
                
                print(f"ğŸ“Š ìœ„ì ¯ ì—…ë°ì´íŠ¸: {stats['total_checks']}íšŒ, ê°€ë™ì‹œê°„: {actual_uptime_minutes:.1f}ë¶„")
                self.condition_widget.stats_widget.update_stats(stats)
                
            # 6. ë¡œê·¸ ë©”ì‹œì§€ ì¶”ê°€
            if hasattr(self.condition_widget, 'add_condition_log'):
                self.condition_widget.add_condition_log("ê°€ë™ì‹œê°„ ê³„ì‚° ìˆ˜ì •ë¨", "ì •ë³´")
                
            print("âœ… ì¡°ê±´ ìœ„ì ¯ ê°•ì œ ë™ê¸°í™” ì™„ë£Œ")
            return True
            
        except Exception as e:
            print(f"âŒ ì¡°ê±´ ìœ„ì ¯ ë™ê¸°í™” ì‹¤íŒ¨: {e}")
            return False

    def _periodic_sync(self):
        """ì£¼ê¸°ì  ë™ê¸°í™” - ìˆ˜ì •ëœ ê°€ë™ì‹œê°„"""
        try:
            if not self.condition_monitor or not self.condition_widget:
                return
                
            # ì¹´ìš´í„° ìë™ ì¦ê°€
            self.condition_monitor.counters['total_checks'] += 1
            
            # ì‹¤ì œ ê°€ë™ì‹œê°„ ê³„ì‚°
            if hasattr(self.condition_monitor, 'start_time'):
                current_time = time.time()
                actual_uptime_minutes = (current_time - self.condition_monitor.start_time) / 60
            else:
                actual_uptime_minutes = 0
            
            # ìœ„ì ¯ ì—…ë°ì´íŠ¸
            if hasattr(self.condition_widget, 'stats_widget'):
                stats = {
                    'total_checks': self.condition_monitor.counters['total_checks'],
                    'uptime_minutes': actual_uptime_minutes,  # ì˜¬ë°”ë¥¸ ê°€ë™ì‹œê°„
                    'trend_distribution': {
                        'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                        'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                        'sideways': 0
                    }
                }
                self.condition_widget.stats_widget.update_stats(stats)
                
        except Exception as e:
            print(f"ì£¼ê¸°ì  ë™ê¸°í™” ì˜¤ë¥˜: {e}")

    def sync_debugger_to_main_gui(self):
        """ë””ë²„ê±°ì˜ ë°ì´í„°ë¥¼ ë©”ì¸ GUIë¡œ ê°•ì œ ë™ê¸°í™”"""
        try:
            print("ğŸ”„ ë””ë²„ê±° â†’ ë©”ì¸ GUI ë™ê¸°í™” ì‹œì‘...")
            
            if not hasattr(self, 'debugger') or not self.debugger:
                print("âŒ ë””ë²„ê±° ì—†ìŒ")
                return False
                
            if not self.condition_monitor or not self.condition_widget:
                print("âŒ ì¡°ê±´ ëª¨ë‹ˆí„° ë˜ëŠ” ìœ„ì ¯ ì—†ìŒ")
                return False
            
            # 1. ë””ë²„ê±°ì˜ ë©”ì¸ ìœˆë„ìš°ì—ì„œ ì¡°ê±´ ëª¨ë‹ˆí„° ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
            debugger_main_window = self.debugger.main_window
            if debugger_main_window and hasattr(debugger_main_window, 'condition_monitor'):
                debugger_monitor = debugger_main_window.condition_monitor
                
                if debugger_monitor and hasattr(debugger_monitor, 'counters'):
                    print("ğŸ“Š ë””ë²„ê±° ì¹´ìš´í„° ë°œê²¬:")
                    for key, value in debugger_monitor.counters.items():
                        print(f"   {key}: {value}")
                    
                    # 2. ë©”ì¸ GUIì˜ ì¡°ê±´ ëª¨ë‹ˆí„°ì— ë°ì´í„° ë³µì‚¬
                    self.condition_monitor.counters.update(debugger_monitor.counters)
                    
                    # 3. ì‹œì‘ ì‹œê°„ë„ ë³µì‚¬ (ìˆë‹¤ë©´)
                    if hasattr(debugger_monitor, 'start_time'):
                        self.condition_monitor.start_time = debugger_monitor.start_time
                    else:
                        self.condition_monitor.start_time = time.time() - 300  # 5ë¶„ ì „ìœ¼ë¡œ ì„¤ì •
                    
                    # 4. ëª¨ë‹ˆí„°ë§ í™œì„±í™” ìƒíƒœ ë³µì‚¬
                    if hasattr(debugger_monitor, 'monitoring_active'):
                        self.condition_monitor.monitoring_active = debugger_monitor.monitoring_active
                    
                    print("âœ… ë””ë²„ê±° ë°ì´í„° ë³µì‚¬ ì™„ë£Œ")
            
            # 5. ìœ„ì ¯ ê°•ì œ ì—…ë°ì´íŠ¸
            current_time = time.time()
            actual_uptime_minutes = (current_time - self.condition_monitor.start_time) / 60
            
            stats = {
                'total_checks': self.condition_monitor.counters.get('total_checks', 0),
                'uptime_minutes': actual_uptime_minutes,
                'trend_distribution': {
                    'uptrend': self.condition_monitor.counters.get('trend_uptrend', 0),
                    'downtrend': self.condition_monitor.counters.get('trend_downtrend', 0),
                    'sideways': self.condition_monitor.counters.get('trend_sideways', 0)
                },
                'signal_counts': {
                    'golden_cross': self.condition_monitor.counters.get('long_signals', 0),
                    'dead_cross': self.condition_monitor.counters.get('short_signals', 0)
                },
                'mode_distribution': {
                    'virtual': self.condition_monitor.counters.get('virtual_mode_strategies', 0),
                    'real': self.condition_monitor.counters.get('real_mode_strategies', 0)
                },
                'switch_opportunities': self.condition_monitor.counters.get('switch_opportunities', 0)
            }
            
            # 6. ìœ„ì ¯ ì—…ë°ì´íŠ¸ ì‹¤í–‰
            if hasattr(self.condition_widget, 'stats_widget'):
                self.condition_widget.stats_widget.update_stats(stats)
                print(f"ğŸ“Š ë©”ì¸ GUI ì—…ë°ì´íŠ¸: {stats['total_checks']}íšŒ, ê°€ë™ì‹œê°„: {actual_uptime_minutes:.1f}ë¶„")
            
            # 7. ë¡œê·¸ ì¶”ê°€
            if hasattr(self.condition_widget, 'add_condition_log'):
                self.condition_widget.add_condition_log(
                    f"ë””ë²„ê±° ë™ê¸°í™”: ì²´í¬ {stats['total_checks']}íšŒ ë³µì‚¬ë¨", "ì •ë³´"
                )
            
            print("âœ… ë””ë²„ê±° â†’ ë©”ì¸ GUI ë™ê¸°í™” ì™„ë£Œ")
            return True
            
        except Exception as e:
            print(f"âŒ ë™ê¸°í™” ì‹¤íŒ¨: {e}")
            import traceback
            traceback.print_exc()
            return False

    def start_continuous_sync(self):
        """ì§€ì†ì  ë™ê¸°í™” ì‹œì‘"""
        try:
            if not hasattr(self, '_sync_timer'):
                self._sync_timer = QTimer()
                self._sync_timer.timeout.connect(self.sync_debugger_to_main_gui)
                
            # 5ì´ˆë§ˆë‹¤ ë™ê¸°í™”
            self._sync_timer.start(5000)
            print("ğŸ”„ ì§€ì†ì  ë™ê¸°í™” ì‹œì‘ (5ì´ˆ ê°„ê²©)")
            
            if self.condition_widget:
                self.condition_widget.add_condition_log("ì§€ì†ì  ë™ê¸°í™” ì‹œì‘ë¨", "ì •ë³´")
                
        except Exception as e:
            print(f"âŒ ì§€ì†ì  ë™ê¸°í™” ì‹œì‘ ì‹¤íŒ¨: {e}")

    def manual_sync_from_debugger(self):
        """ìˆ˜ë™ìœ¼ë¡œ ë””ë²„ê±°ì—ì„œ ë™ê¸°í™”"""
        result = self.sync_debugger_to_main_gui()
        if result:
            print("âœ… ìˆ˜ë™ ë™ê¸°í™” ì„±ê³µ")
            if self.condition_widget:
                self.condition_widget.add_condition_log("ìˆ˜ë™ ë™ê¸°í™” ì™„ë£Œ", "ì •ë³´")
        else:
            print("âŒ ìˆ˜ë™ ë™ê¸°í™” ì‹¤íŒ¨")
            if self.condition_widget:
                self.condition_widget.add_condition_log("ìˆ˜ë™ ë™ê¸°í™” ì‹¤íŒ¨", "ì˜¤ë¥˜")

    # GUIì— ë™ê¸°í™” ë²„íŠ¼ ì¶”ê°€ìš© ì½”ë“œ (create_monitoring_tabì— ì¶”ê°€)
    def add_sync_button_to_monitoring_tab(self):
        """ëª¨ë‹ˆí„°ë§ íƒ­ì— ë™ê¸°í™” ë²„íŠ¼ ì¶”ê°€"""
        # ê¸°ì¡´ ì œì–´ íŒ¨ë„ì— ë²„íŠ¼ ì¶”ê°€
        if hasattr(self, 'condition_widget') and self.condition_widget:
            # ë™ê¸°í™” ë²„íŠ¼ ìƒì„±
            sync_btn = QPushButton("ğŸ”„ ë””ë²„ê±° ë™ê¸°í™”")
            sync_btn.setStyleSheet("background-color: #17a2b8; color: white;")
            sync_btn.clicked.connect(self.manual_sync_from_debugger)
            
            # ê¸°ì¡´ ì œì–´ íŒ¨ë„ì— ì¶”ê°€ (ìˆ˜ì • í•„ìš”í•  ìˆ˜ ìˆìŒ)
            # self.control_layout.addWidget(sync_btn)  # ì‹¤ì œ ë ˆì´ì•„ì›ƒì— ë§ê²Œ ìˆ˜ì •
            
            print("âœ… ë™ê¸°í™” ë²„íŠ¼ ì¶”ê°€ë¨")


    # trading test

    def create_test_trading_tab(self):
        """BTC í…ŒìŠ¤íŠ¸ ê±°ë˜ íƒ­ ìƒì„±"""
        test_tab = QWidget()
        test_layout = QVBoxLayout()
        test_tab.setLayout(test_layout)
        
        # í…ŒìŠ¤íŠ¸ ê±°ë˜ ê·¸ë£¹
        test_group = QGroupBox("ğŸ§ª BTC ê±°ë˜ í…ŒìŠ¤íŠ¸")
        test_group_layout = QVBoxLayout()
        
        # í…ŒìŠ¤íŠ¸ ëª¨ë“œ í† ê¸€
        self.test_mode_checkbox = QCheckBox("í…ŒìŠ¤íŠ¸ ëª¨ë“œ í™œì„±í™”")
        self.test_mode_checkbox.setChecked(True)
        test_group_layout.addWidget(self.test_mode_checkbox)
        
        # ê±°ë˜ ì„¤ì •
        settings_layout = QGridLayout()
        
        # ì‹¬ë³¼ ì„ íƒ
        settings_layout.addWidget(QLabel("ê±°ë˜ ì‹¬ë³¼:"), 0, 0)
        self.test_symbol_combo = QComboBox()
        self.test_symbol_combo.addItems(["BTC-USDT-SWAP", "ETH-USDT-SWAP"])
        settings_layout.addWidget(self.test_symbol_combo, 0, 1)
        
        # ê±°ë˜ ìˆ˜ëŸ‰
        settings_layout.addWidget(QLabel("ê±°ë˜ ìˆ˜ëŸ‰:"), 1, 0)
        self.test_size_spin = QDoubleSpinBox()
        self.test_size_spin.setMinimum(0.001)
        self.test_size_spin.setMaximum(1.0)
        self.test_size_spin.setSingleStep(0.001)
        self.test_size_spin.setValue(0.001)
        self.test_size_spin.setDecimals(4)
        settings_layout.addWidget(self.test_size_spin, 1, 1)
        
        # ë ˆë²„ë¦¬ì§€
        settings_layout.addWidget(QLabel("ë ˆë²„ë¦¬ì§€:"), 2, 0)
        self.test_leverage_spin = QSpinBox()
        self.test_leverage_spin.setMinimum(1)
        self.test_leverage_spin.setMaximum(10)
        self.test_leverage_spin.setValue(1)
        settings_layout.addWidget(self.test_leverage_spin, 2, 1)
        
        test_group_layout.addLayout(settings_layout)
        
        # ê±°ë˜ ë²„íŠ¼
        button_layout = QHBoxLayout()
        
        self.test_buy_btn = QPushButton("ğŸ“ˆ í…ŒìŠ¤íŠ¸ ë§¤ìˆ˜")
        self.test_buy_btn.clicked.connect(lambda: self.execute_test_trade("buy"))
        self.test_buy_btn.setStyleSheet("background-color: #4CAF50;")
        button_layout.addWidget(self.test_buy_btn)
        
        self.test_sell_btn = QPushButton("ğŸ“‰ í…ŒìŠ¤íŠ¸ ë§¤ë„")
        self.test_sell_btn.clicked.connect(lambda: self.execute_test_trade("sell"))
        self.test_sell_btn.setStyleSheet("background-color: #f44336;")
        button_layout.addWidget(self.test_sell_btn)
        
        self.test_close_btn = QPushButton("âŒ í¬ì§€ì…˜ ì¢…ë£Œ")
        self.test_close_btn.clicked.connect(self.close_test_position)
        button_layout.addWidget(self.test_close_btn)
        
        test_group_layout.addLayout(button_layout)
        test_group.setLayout(test_group_layout)
        
        # í…ŒìŠ¤íŠ¸ ê²°ê³¼ í‘œì‹œ
        result_group = QGroupBox("ğŸ“Š í…ŒìŠ¤íŠ¸ ê²°ê³¼")
        result_layout = QVBoxLayout()
        
        self.test_result_text = QTextEdit()
        self.test_result_text.setReadOnly(True)
        self.test_result_text.setMaximumHeight(300)
        result_layout.addWidget(self.test_result_text)
        
        result_group.setLayout(result_layout)
        
        test_layout.addWidget(test_group)
        test_layout.addWidget(result_group)
        test_layout.addStretch()
        
        self.tab_widget.addTab(test_tab, "ğŸ§ª ê±°ë˜ í…ŒìŠ¤íŠ¸")

    def execute_test_trade(self, side: str):
        """ì‹¤ì œ ê±°ë˜ ì‹¤í–‰ - ë””ë²„ê¹… ê°•í™” ë²„ì „"""
        try:
            from okx.order_manager import OrderManager
            from okx.order_validator import OrderValidator
            
            symbol = self.test_symbol_combo.currentText()
            size = self.test_size_spin.value()
            leverage = self.test_leverage_spin.value()
            
            # í…ŒìŠ¤íŠ¸ ëª¨ë“œ ì²´í¬
            is_test_mode = self.test_mode_checkbox.isChecked()
            
            # ë¡œê·¸ ì‹œì‘
            timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
            self.test_result_text.append(f"\n{'='*50}")
            self.test_result_text.append(f"â° {timestamp}")
            
            # ì‹¤ì œ ê±°ë˜ í™•ì¸
            if not is_test_mode:
                reply = QMessageBox.question(
                    self, 
                    "âš ï¸ ì‹¤ì œ ê±°ë˜ í™•ì¸", 
                    f"ì‹¤ì œ ìê¸ˆìœ¼ë¡œ ê±°ë˜ë¥¼ ì‹¤í–‰í•©ë‹ˆë‹¤!\n\n"
                    f"ì‹¬ë³¼: {symbol}\n"
                    f"ë°©í–¥: {'ë§¤ìˆ˜' if side == 'buy' else 'ë§¤ë„'}\n"
                    f"ìˆ˜ëŸ‰: {size} BTC\n"
                    f"ë ˆë²„ë¦¬ì§€: {leverage}x\n\n"
                    f"ì •ë§ ì‹¤í–‰í•˜ì‹œê² ìŠµë‹ˆê¹Œ?",
                    QMessageBox.Yes | QMessageBox.No
                )
                if reply == QMessageBox.No:
                    self.test_result_text.append("âŒ ì‚¬ìš©ìê°€ ê±°ë˜ë¥¼ ì·¨ì†Œí–ˆìŠµë‹ˆë‹¤.")
                    return
            
            # ê°€ê²© ê°€ì ¸ì˜¤ê¸° - íƒ€ì„ì•„ì›ƒ ì¶”ê°€
            self.test_result_text.append("ğŸ”„ ê°€ê²© ì¡°íšŒ ì¤‘...")
            QApplication.processEvents()  # UI ì—…ë°ì´íŠ¸
            
            current_price = None
            
            # 1ì°¨ ì‹œë„: WebSocket ë°ì´í„°
            if hasattr(self, 'latest_prices') and self.latest_prices:
                self.test_result_text.append("  WebSocket ë°ì´í„° í™•ì¸...")
                QApplication.processEvents()
                
                if isinstance(self.latest_prices, dict) and symbol in self.latest_prices:
                    price_data = self.latest_prices[symbol]
                    if isinstance(price_data, dict):
                        current_price = price_data.get('last') or price_data.get('close')
                    elif isinstance(price_data, (float, int)):
                        current_price = float(price_data)
                        
                if current_price:
                    self.test_result_text.append(f"  âœ… WebSocket ê°€ê²©: ${current_price:,.2f}")
            
            # 2ì°¨ ì‹œë„: API í˜¸ì¶œ
            if not current_price:
                self.test_result_text.append("  API ì§ì ‘ í˜¸ì¶œ...")
                QApplication.processEvents()
                
                try:
                    from okx.market_data import MarketDataManager
                    market = MarketDataManager()
                    ticker = market.get_ticker(symbol)
                    
                    if ticker and 'last' in ticker:
                        current_price = float(ticker['last'])
                        self.test_result_text.append(f"  âœ… API ê°€ê²©: ${current_price:,.2f}")
                except Exception as e:
                    self.test_result_text.append(f"  âŒ API í˜¸ì¶œ ì‹¤íŒ¨: {str(e)}")
            
            # 3ì°¨: ê¸°ë³¸ê°’ ì‚¬ìš©
            if not current_price:
                current_price = 45000 if 'BTC' in symbol else 2800
                self.test_result_text.append(f"  âš ï¸ ê¸°ë³¸ ê°€ê²© ì‚¬ìš©: ${current_price:,.2f}")
            
            # ê±°ë˜ ê²€ì¦
            self.test_result_text.append("ğŸ“‹ ê±°ë˜ ê²€ì¦ ì¤‘...")
            QApplication.processEvents()
            
            validator = OrderValidator()
            is_valid, error_msg = validator.validate_order_size(symbol, size, current_price)
            
            if not is_valid:
                self.test_result_text.append(f"âŒ ê±°ë˜ ê²€ì¦ ì‹¤íŒ¨: {error_msg}")
                return
            
            self.test_result_text.append("âœ… ê±°ë˜ ê²€ì¦ í†µê³¼")
            
            # ê±°ë˜ ì •ë³´ í‘œì‹œ
            if is_test_mode:
                self.test_result_text.append(f"\nğŸ§ª **í…ŒìŠ¤íŠ¸ ê±°ë˜ ì‹œë®¬ë ˆì´ì…˜**")
            else:
                self.test_result_text.append(f"\nğŸ’° **ì‹¤ì œ ê±°ë˜ ì‹¤í–‰**")
            
            self.test_result_text.append(f"  ì‹¬ë³¼: {symbol}")
            self.test_result_text.append(f"  ë°©í–¥: {'ë§¤ìˆ˜ ğŸŸ¢' if side == 'buy' else 'ë§¤ë„ ğŸ”´'}")
            self.test_result_text.append(f"  ìˆ˜ëŸ‰: {size} BTC")
            self.test_result_text.append(f"  ë ˆë²„ë¦¬ì§€: {leverage}x")
            self.test_result_text.append(f"  í˜„ì¬ê°€: ${current_price:,.2f}")
            
            # ê³„ì‚°
            notional_value = size * current_price
            margin_required = notional_value / leverage
            fee = notional_value * 0.0005
            
            self.test_result_text.append(f"  ëª…ëª© ê°€ì¹˜: ${notional_value:,.2f}")
            self.test_result_text.append(f"  í•„ìš” ì¦ê±°ê¸ˆ: ${margin_required:,.2f}")
            self.test_result_text.append(f"  ì˜ˆìƒ ìˆ˜ìˆ˜ë£Œ: ${fee:,.2f}")
            
            if is_test_mode:
                # ì‹œë®¬ë ˆì´ì…˜ ëª¨ë“œ
                self.test_result_text.append(f"\nğŸ“Š ì˜ˆìƒ ì†ìµ (ë ˆë²„ë¦¬ì§€ {leverage}x):")
                for change_pct in [0.5, 1, 2, -0.5, -1, -2]:
                    future_price = current_price * (1 + change_pct/100)
                    if side == "buy":
                        pnl = (future_price - current_price) * size * leverage
                    else:
                        pnl = (current_price - future_price) * size * leverage
                    
                    color = "ğŸŸ¢" if pnl > 0 else "ğŸ”´"
                    self.test_result_text.append(f"    {color} {change_pct:+.1f}%: ${pnl:+,.2f}")
                
                self.test_result_text.append(f"\nâœ… ì‹œë®¬ë ˆì´ì…˜ ì™„ë£Œ")
            else:
                # ì‹¤ì œ ê±°ë˜ ì‹¤í–‰
                self.test_result_text.append(f"\nğŸš€ ì£¼ë¬¸ ì „ì†¡ ì¤‘...")
                QApplication.processEvents()
                
                order_manager = OrderManager()
                
                try:
                    result = order_manager.place_market_order(
                        inst_id=symbol,
                        side=side,
                        size=size,
                        leverage=leverage,
                        position_side="net",
                        trade_mode="cross"
                    )
                    
                    if result:
                        self.test_result_text.append(f"âœ… ì£¼ë¬¸ ì „ì†¡ ì„±ê³µ!")
                        self.test_result_text.append(f"  ì£¼ë¬¸ ID: {result.get('order_id')}")
                        
                        # 2ì´ˆ í›„ ì²´ê²° í™•ì¸
                        QTimer.singleShot(2000, lambda: self._check_order_status_safe(symbol, result.get('order_id')))
                    else:
                        self.test_result_text.append(f"âŒ ì£¼ë¬¸ ì‹¤íŒ¨ - API ì‘ë‹µ ì—†ìŒ")
                        
                except Exception as e:
                    self.test_result_text.append(f"âŒ ì£¼ë¬¸ ì˜¤ë¥˜: {str(e)}")
                    import traceback
                    self.test_result_text.append(f"ìƒì„¸: {traceback.format_exc()}")
            
        except Exception as e:
            self.test_result_text.append(f"\nâŒ ì „ì²´ ì˜¤ë¥˜ ë°œìƒ!")
            self.test_result_text.append(f"  ì˜¤ë¥˜: {str(e)}")
            import traceback
            self.test_result_text.append(f"  ìƒì„¸:\n{traceback.format_exc()}")
        
        finally:
            # ìŠ¤í¬ë¡¤ ë§¨ ì•„ë˜ë¡œ
            self.test_result_text.verticalScrollBar().setValue(
                self.test_result_text.verticalScrollBar().maximum()
            )

    def _execute_real_trade(self, symbol, side, size, leverage, current_price):
        """ì‹¤ì œ ê±°ë˜ ì‹¤í–‰"""
        from okx.order_manager import OrderManager
        
        self.test_result_text.append(f"ğŸ’° **ì‹¤ì œ ê±°ë˜ ì‹¤í–‰**")
        self.test_result_text.append(f"  ì‹¬ë³¼: {symbol}")
        self.test_result_text.append(f"  ë°©í–¥: {'ë§¤ìˆ˜ ğŸŸ¢' if side == 'buy' else 'ë§¤ë„ ğŸ”´'}")
        self.test_result_text.append(f"  ìˆ˜ëŸ‰: {size} BTC")
        self.test_result_text.append(f"  ë ˆë²„ë¦¬ì§€: {leverage}x")
        self.test_result_text.append(f"  í˜„ì¬ê°€: ${current_price:,.2f}")
        
        # ì˜ˆìƒ ë¹„ìš© ê³„ì‚°
        notional_value = size * current_price
        margin_required = notional_value / leverage
        fee = notional_value * 0.0005
        
        self.test_result_text.append(f"  í•„ìš” ì¦ê±°ê¸ˆ: ${margin_required:,.2f}")
        self.test_result_text.append(f"  ì˜ˆìƒ ìˆ˜ìˆ˜ë£Œ: ${fee:,.2f}")
        
        self.test_result_text.append(f"\nğŸš€ ì£¼ë¬¸ ì „ì†¡ ì¤‘...")
        QApplication.processEvents()
        
        # ì‹¤ì œ ì£¼ë¬¸ ì‹¤í–‰
        order_manager = OrderManager()
        
        try:
            # OKX APIë¡œ ì‹¤ì œ ì£¼ë¬¸ ì „ì†¡
            result = order_manager.place_market_order(
                inst_id=symbol,
                side=side,
                size=size,
                leverage=leverage,
                position_side="net",
                trade_mode="cross"
            )
            
            if result and result.get('order_id'):
                self.test_result_text.append(f"âœ… **ì£¼ë¬¸ ì „ì†¡ ì„±ê³µ!**")
                self.test_result_text.append(f"  ì£¼ë¬¸ ID: {result.get('order_id')}")
                self.test_result_text.append(f"  ìƒíƒœ: {result.get('status')}")
                
                # ì‹¤ì‹œê°„ ì²´ê²° í™•ì¸ (2ì´ˆ í›„)
                QTimer.singleShot(2000, lambda: self._check_real_order_status(
                    symbol, result.get('order_id'), size, current_price, side
                ))
                
                # ì£¼ë¬¸ ë‚´ì—­ ì €ì¥
                self._save_trade_log(result)
                
            else:
                self.test_result_text.append(f"âŒ ì£¼ë¬¸ ì‹¤íŒ¨!")
                self.test_result_text.append(f"  ì„œë²„ ì‘ë‹µì„ í™•ì¸í•˜ì„¸ìš”")
                
        except Exception as e:
            self.test_result_text.append(f"âŒ **ì£¼ë¬¸ ì˜¤ë¥˜!**")
            self.test_result_text.append(f"  ì˜¤ë¥˜: {str(e)}")
            import traceback
            traceback.print_exc()
        
        # ìŠ¤í¬ë¡¤ ë§¨ ì•„ë˜ë¡œ
        self.test_result_text.verticalScrollBar().setValue(
            self.test_result_text.verticalScrollBar().maximum()
        )

    def _check_real_order_status(self, symbol, order_id, size, entry_price, side):
        """ì‹¤ì œ ì£¼ë¬¸ ì²´ê²° ìƒíƒœ í™•ì¸"""
        from okx.order_manager import OrderManager
        
        self.test_result_text.append(f"\nğŸ“‹ ì²´ê²° ìƒíƒœ í™•ì¸ ì¤‘...")
        QApplication.processEvents()
        
        order_manager = OrderManager()
        status_info = order_manager.get_order_status(symbol, order_id)
        
        if status_info:
            filled_size = float(status_info.get('filled_size', 0))
            avg_price = float(status_info.get('avg_price', 0))
            fee_paid = float(status_info.get('fee', 0))
            status = status_info.get('status')
            
            self.test_result_text.append(f"\nâœ… **ì²´ê²° í™•ì¸**")
            self.test_result_text.append(f"  ìƒíƒœ: {status}")
            self.test_result_text.append(f"  ì²´ê²° ìˆ˜ëŸ‰: {filled_size} / {size}")
            self.test_result_text.append(f"  í‰ê·  ì²´ê²°ê°€: ${avg_price:,.2f}")
            self.test_result_text.append(f"  ì‹¤ì œ ìˆ˜ìˆ˜ë£Œ: ${abs(fee_paid):,.4f}")
            
            if status == 'filled':
                # ì™„ì „ ì²´ê²°
                slippage = ((avg_price - entry_price) / entry_price) * 100
                self.test_result_text.append(f"  ìŠ¬ë¦¬í”¼ì§€: {slippage:+.3f}%")
                
                # í¬ì§€ì…˜ ì •ë³´ ì—…ë°ì´íŠ¸
                self._update_position_info(symbol, side, filled_size, avg_price)
                
                self.test_result_text.append(f"\nğŸ‰ **ê±°ë˜ ì™„ë£Œ!**")
                self.test_result_text.append(f"  í¬ì§€ì…˜ì´ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤.")
                
            elif status == 'partially_filled':
                self.test_result_text.append(f"âš ï¸ ë¶€ë¶„ ì²´ê²°ë¨")
            else:
                self.test_result_text.append(f"â³ ë¯¸ì²´ê²° ìƒíƒœ")
        else:
            self.test_result_text.append(f"âŒ ì²´ê²° ìƒíƒœ í™•ì¸ ì‹¤íŒ¨")
        
        # ìŠ¤í¬ë¡¤ ë§¨ ì•„ë˜ë¡œ
        self.test_result_text.verticalScrollBar().setValue(
            self.test_result_text.verticalScrollBar().maximum()
        )

    def _check_order_status_safe(self, symbol, order_id):
        """ì•ˆì „í•œ ì£¼ë¬¸ ìƒíƒœ í™•ì¸"""
        try:
            if not order_id:
                self.test_result_text.append("âŒ ì£¼ë¬¸ IDê°€ ì—†ìŠµë‹ˆë‹¤")
                return
            
            from okx.order_manager import OrderManager
            
            self.test_result_text.append(f"\nğŸ“‹ ì²´ê²° í™•ì¸ ì¤‘...")
            order_manager = OrderManager()
            status = order_manager.get_order_status(symbol, order_id)
            
            if status:
                self.test_result_text.append(f"  ìƒíƒœ: {status.get('status')}")
                self.test_result_text.append(f"  ì²´ê²°ê°€: ${float(status.get('avg_price', 0)):,.2f}")
                self.test_result_text.append(f"  ì²´ê²° ìˆ˜ëŸ‰: {status.get('filled_size')}")
                self.test_result_text.append(f"  ìˆ˜ìˆ˜ë£Œ: ${float(status.get('fee', 0)):,.4f}")
            else:
                self.test_result_text.append("âŒ ì²´ê²° ìƒíƒœ ì¡°íšŒ ì‹¤íŒ¨")
                
        except Exception as e:
            self.test_result_text.append(f"âŒ ì²´ê²° í™•ì¸ ì˜¤ë¥˜: {str(e)}")
        
        finally:
            self.test_result_text.verticalScrollBar().setValue(
                self.test_result_text.verticalScrollBar().maximum()
            )

    def get_current_market_price(self, symbol):
        """í˜„ì¬ ì‹œì¥ê°€ ê°€ì ¸ì˜¤ê¸°"""
        # 1. WebSocket ì‹¤ì‹œê°„ ê°€ê²©
        if hasattr(self, 'latest_prices') and symbol in self.latest_prices:
            price_data = self.latest_prices[symbol]
            if isinstance(price_data, dict):
                return price_data.get('last') or price_data.get('close')
            elif isinstance(price_data, (float, int)):
                return float(price_data)
        
        # 2. API ì§ì ‘ í˜¸ì¶œ
        try:
            from okx.market_data import MarketDataManager
            market = MarketDataManager()
            ticker = market.get_ticker(symbol)
            if ticker and 'last' in ticker:
                return float(ticker['last'])
        except:
            pass
        
        # 3. ê¸°ë³¸ê°’
        return 45000 if 'BTC' in symbol else 2800

    def _save_trade_log(self, order_result):
        """ê±°ë˜ ë¡œê·¸ ì €ì¥"""
        import json
        from pathlib import Path
        
        log_dir = Path("logs/trades")
        log_dir.mkdir(parents=True, exist_ok=True)
        
        log_file = log_dir / f"trades_{datetime.now().strftime('%Y%m%d')}.json"
        
        trade_log = {
            'timestamp': datetime.now().isoformat(),
            'order_id': order_result.get('order_id'),
            'symbol': order_result.get('instrument'),
            'side': order_result.get('side'),
            'size': order_result.get('size'),
            'leverage': order_result.get('leverage'),
            'status': order_result.get('status')
        }
        
        # ê¸°ì¡´ ë¡œê·¸ ì½ê¸°
        logs = []
        if log_file.exists():
            with open(log_file, 'r') as f:
                logs = json.load(f)
        
        # ìƒˆ ë¡œê·¸ ì¶”ê°€
        logs.append(trade_log)
        
        # ì €ì¥
        with open(log_file, 'w') as f:
            json.dump(logs, f, indent=2)

    def _update_position_info(self, symbol, side, size, price):
        """í¬ì§€ì…˜ ì •ë³´ ì—…ë°ì´íŠ¸"""
        self.test_result_text.append(f"\nğŸ“Š í¬ì§€ì…˜ ì—…ë°ì´íŠ¸:")
        self.test_result_text.append(f"  ì‹¬ë³¼: {symbol}")
        self.test_result_text.append(f"  ë°©í–¥: {side}")
        self.test_result_text.append(f"  ìˆ˜ëŸ‰: {size}")
        self.test_result_text.append(f"  ì§„ì…ê°€: ${price:,.2f}")

    def close_test_position(self):
        """í…ŒìŠ¤íŠ¸ í¬ì§€ì…˜ ì¢…ë£Œ"""
        symbol = self.test_symbol_combo.currentText()
        timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
        
        self.test_result_text.append(f"\n{'='*50}")
        self.test_result_text.append(f"â° {timestamp}")
        self.test_result_text.append(f"âŒ í¬ì§€ì…˜ ì¢…ë£Œ: {symbol}")
        self.test_result_text.append(f"  í…ŒìŠ¤íŠ¸ ëª¨ë“œì—ì„œ í¬ì§€ì…˜ì´ ì¢…ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.")
        
        # ìŠ¤í¬ë¡¤ì„ ë§¨ ì•„ë˜ë¡œ
        self.test_result_text.verticalScrollBar().setValue(
            self.test_result_text.verticalScrollBar().maximum()
        ) 


# ë©”ì¸ í•¨ìˆ˜
def main():
    """GUI ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹¤í–‰"""
    app = QApplication(sys.argv)
    
    # ì• í”Œë¦¬ì¼€ì´ì…˜ ì •ë³´ ì„¤ì •
    app.setApplicationName("OKX ìë™ë§¤ë§¤ ì‹œìŠ¤í…œ")
    app.setApplicationVersion("2.0")
    app.setOrganizationName("Trading Bot Team")
    
    try:
        # ë©”ì¸ ìœˆë„ìš° ìƒì„±
        print("âœ… ê³„ì¢Œ ê´€ë¦¬ì ì´ˆê¸°í™” ì™„ë£Œ")
        window = TradingMainWindow()
        window.show()
        
        # ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹¤í–‰
        return app.exec_()
        
    except Exception as e:
        print(f"GUI ì• í”Œë¦¬ì¼€ì´ì…˜ ì‹œì‘ ì‹¤íŒ¨: {e}")
        traceback.print_exc()
        return 1

if __name__ == "__main__":
    sys.exit(main())