        # ì˜¤ë¥¸ìª½: ì •ë³´ íŒ¨ë„
        info_panel = QWidget()
        info_layout = QVBoxLayout()
        info_panel.setLayout(info_layout)
        
        # ì”ê³  ì •ë³´
        balance_group = QGroupBox("ğŸ’° ê³„ì¢Œ ì •ë³´")
        balance_layout = QGridLayout()
        balance_group.setLayout(balance_layout)
        
